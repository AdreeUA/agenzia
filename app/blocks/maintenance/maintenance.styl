.maintenance
	width 332px
	border 1px solid colorMain
	text-align center

	+below(shd)
		width 303px
	+below(xl)
		width 242px
	+below(l)
		width 40%
	+below(sm)
		width 70%

	&__header
		padding 35px 32px 5px 5px
		min-height 128px
		font-size 0
		color colorSecond
		background-color colorMain

		+below(xl)
			padding 22px 24px 4px 4px
			min-height 98px

	&__names-tariff
	// &__price
		display inline-block
		vertical-align top

	&__names-tariff
		font-size 45px
		font-weight 700

		+below(xl)
			font-size 30px

	&__audience
		font-size 17px
		font-weight 400
		line-height 27px
		color #efefef

		+below(xl)
			font-size 13px

	&__price
		font-size 32px
		font-weight 700
		float right

		+below(xl)
			font-size 20px

		&_money
			font-size 18px
			line-height 27px
			display block
			margin-top 10px

	&__services
		color #333
		font-size 19px
		line-height 51px
		text-align center
		margin-bottom 36px

		+below(xl)
			font-size 14px
			line-height 40px
			margin-bottom 20px

	&__item
		&:nth-of-type(even)
			background-color #f2f2f2

	&__btn
		text-align center
		margin-bottom 26px
