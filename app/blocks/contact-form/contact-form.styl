.contact-form
	display block
	font-size 15px
	color colorGrey

	&__message
	&__name
	&__email
		margin-bottom 14px
		padding 15px 30px
		width 100%
		font-family fontMain
		font-size 15px
		border 1px solid
		border-color transparent transparent colorMain transparent

		+below(xs)
			padding 10px

		&::-webkit-input-placeholder
			font-family Raleway
			font-size 15px
			color #7b7b7b

	&__message
		padding-top 19px
		overflow hidden
		line-height 1.5

	&__btn
		width 100%
		color colorSecond
		background-color colorMain
		border 1px solid
		transition all .5s
		@extend .btn

		&:hover
			color colorMain
			background-color colorSecond
			border 1px solid colorMain
			box-shadow 0 0 15px rgba(#000, .75)
			transition all .5s
