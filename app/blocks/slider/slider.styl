.slider
	position relative

	&__list
		width 100%

	&__item
		position relative
		height 1016px
		background-repeat no-repeat
		background-size cover
		background-position 50% 50%

		&:after
			position absolute
			top 0
			right 0
			left 0
			bottom 0
			content ''
			background-color rgba(#fff, .5)

		+below(xl)
			height 800px
		+below(l)
			height 400px
		+below(xs)
			height 400px

	&__content
		position absolute
		z-index 2
		top 30%
		left 50%
		max-width 580px
		color colorMain

		+below(l)
			left 36%
		+below(m)
			left 30%
			top 19%

	&__title
		font-size 36px
		font-weight 300
		line-height 1.5
		text-transform uppercase

		&_bold
			font-weight 700

		+below(l)
			font-size 25px
		+below(xs)
			font-size 20px

	&__disc
		margin-bottom 44px
		font-size 15px
		line-height 24px

		+below(xs)
			font-size 12px

		b
			font-weight 700

	// ПАГИНАЦИЯ

	.owl-dots
		position absolute
		top 0
		left 33px
		right auto
		bottom 0
		display flex
		flex-direction column
		height 100%
		align-items center
		justify-content center

		.active
			background-color colorMain

	.owl-dot
		margin-bottom 8px
		display block
		width 14px
		height 14px
		cursor pointer
		border 1px solid colorMain
		border-radius inherit
		background-color transparent
