.contact
	display block

	&__wrap
		padding-top 104px
		padding-bottom 62px

		+below(xl)
			padding-top 50px
			padding-bottom 30px

	&__content
	&__form-wrap
		margin-x(3.75%)
		display inline-block
		width 42%
		vertical-align top

		+below(m)
			width 92.5%

	.contact-form

		+below(m)
			margin auto
			width 75%

	.logo
		margin-bottom 18px
		float none

		+below(m)
			display inline-block
			width 48%
			vertical-align top
		+below(xs)
			width 100%
			text-align center

	&__disc
		margin-right 80px
		margin-bottom 34px

		+below(m)
			margin-right 0
			display inline-block
			width 50%
		+below(xs)
			width 100%
			text-align center

	&__list
		margin-left 58px
		font-size 15px
		line-height 26px

		+below(m)
			margin-bottom 20px
			margin-left 0
		+below(xs)
			margin 0 auto 20px
			max-width 250px

	&__item

		+below(m)
			display inline-block
			width 45%
			vertical-align top
		+below('sm')
			text-align center
			width 100%
			margin 0 auto

		a
			text-decoration none
			color inherit

		.fa
			margin-right 24px
			min-width 16px
			font-size 14px

	&__map
		height 400px
		position relative

		+below(xl)
			height 300px
		+below(sm)
			height 200px

	&__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background transparent
