include ../title/title
include ../row/row
include ../logo/logo
include ../contact-form/contact-form

mixin contact()
	+b.contact&attributes(attributes)
		+title("CONTACT US")
		+row
			.contact__wrap
				.contact__content
					+logo
					.contact__disc
						| Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam vestibulum orci. Proin pellentesque in mi quis pellentesque.
					ul.contact__list
						li.contact__item.contact__item_address
							a(href="#") 
								i.fa.fa-home
								| 3340 Tunis St, Paris Z3 0TY, FR

						li.contact__item.contact__item_phone
							a(href="phone:+21 034 5785 5712") 
								i.fa.fa-phone
								|Phone: +21 (0)34 5785 5712

						li.contact__item.contact__item_fax
							a(href="#")
								i.fa.fa-fax
								| Fax: +21 (0)34 3115 5737

						li.contact__item.contact__item_email
							a(href="mailto:hello@agenzia.com")
								i.fa.fa-envelope
								| Email: hello@agenzia.com

				.contact__form-wrap
					+contact-form("Send Message")

		+e.map
			iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d18924.48157828317!2d36.28813700772242!3d54.54724699279312!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sru!4v1459946533037" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen)
