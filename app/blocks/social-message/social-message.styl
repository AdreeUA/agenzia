.social-message
	text-align center
	max-width 70%
	margin auto

	&__icon
		font-size 32px
		margin-bottom 30px

		+below(xl)
			margin-bottom 16px

	&__social
		font-size 42px
		font-weight 700
		text-transform uppercase
		margin-bottom 15px

		+below(xl)
			font-size 30px

	&__message
		margin-bottom 69px
		position relative
		font-size 17px

		+below(xl)
			margin-bottom 40px
