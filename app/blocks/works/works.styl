.works
	display block
	font-size 0
	text-align center
	overflow hidden

	&__list
		width 100%

	&__item
		width 25%
		height 400px
		display inline-block
		vertical-align top
		position relative
		background-size cover
		background-position 50% 50%

		+below(shd)
			height 295px
		+below(xl)
			height 260px
		+below(l)
			height 300px
			width 33.333333%
			&:last-child
				display none
		+below(m)
			width 33.333333%
			height 250px
		+below(sm)
			height 250px
			width 50%
		+below(xs)
			width 100%
			&:last-child
				display inline-block

	&__picture
		width 100%
		height 100%

	&__btn
		background-image url(../images/bg-works.jpg)
		background-repeat no-repeat
		background-size cover
		padding-y(25px)
		position relative

		&:after
			content ''
			position absolute
			top 0
			bottom 0
			right 0
			left 0
			background-color rgba(34, 34, 34, .8)

		.btn
			color colorSecond
			position relative
			z-index 10

			&:hover
				background-color rgba(colorMain, .5)
				border-color colorSecond

	.more__name
		font-size 21px
		line-height 1.8

		+below(l)
			font-size 18px

	.more__disc
		font-size 18px

		+below(l)
			font-size 15px

	.social__link
		display block
		font-size 32px
		line-height 49px
		width 50px
		height 50px
		border 2px solid colorSecond

		&:hover
			background-color colorSecond
			color colorMain

		+below(l)
			width 30px
			height 30px
			font-size 21px
			padding-top 4px

			.fa
				vertical-align top
