.user
	display inline-block
	width 135px
	text-align center
	
	+below(l)
		width 100px
	+below(m)
		width 100%
		
	&__col
		display inline-block
		vertical-align middle
		clearfix()
	
	&__avatar
		width 100px
		height 100px
		border-radius 50%
		overflow hidden
		margin-bottom 15px
		display inline-block
		
		+below(m)
			float right
			margin-x(15px)
			size(75px)
	
	&__img
		width 100%
		
	&__personal-info	
		position relative
		margin-bottom 15px
		padding-bottom 15px
		
		&:before
			content ''
			position absolute
			bottom 0
			left 0
			width 100%
			border 1px solid #efefef
			
		+below(m)
			display inline-block
			margin-top 10px
		
	&__name
		font-size 19px
		font-weight 700
		margin-bottom 6px
		
		+below(m)
			font-size 13px
	
	&__profession
		font-size 13px
		color #000
		
		+below(m)
			font-size 11px
		
	&__register-date
		color colorGrey
		margin-bottom 15px
		
		+below(m)
			font-size 11px
		+below(sm)
			display inline-block
		
	&__profile
		display block
		margin 0 auto
		padding 13px 5px
		width 100%
		line-height 1.3
		color #171414
		text-decoration none
		border 1px solid
		transition all .5s
		
		&:hover
			background-color #171414
			box-shadow 0 0 15px rgba(#000, .75)
			color colorSecond
			border-color #171414
			transition all .5s
			
		+below(m)
			font-size 11px
			padding 8px 5px

		.fa
			margin-left 5px
			
		span
			color #484848
		
		
